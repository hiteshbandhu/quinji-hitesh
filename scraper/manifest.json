{
  "manifest_version": 2,
  "name": "Source Code Scraper",
  "version": "1.0",
  "description": "Chrome extension to scrape and display page source code",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.svg"
    }
  },
  "icons": {
    "16": "icon16.svg"

  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
